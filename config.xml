<?xml version="1.0" encoding="utf-8"?>

 <widget xmlns ="http://www.w3.org/ns/widgets"
   xmlns:gao="http://phonegap.com/ns/1.0"
   id="com.phonegap.exemple7"
    version="1.0.0">
	
	<name> app7 Deslizar hacia la izquierda y a la derecha</name>
	
	<description>
	 Aplicacion que realiza el swipe o deslizamiento en el dispositivo
	</description>
	
	<author href="https://build.phonegap.com" email="mguadalupejimenez1g@gmail.com">
	 Maria Guadalupe Jimenez Vazque 
	 4to g
	</author>
	
	<!--perzonaliza la aplicacion y plataforma-->
	<preference name="orientacion"    value="default"/>
	<!--<preference name="orientacion" value="portrait"/>
	<preference name="orientacion" value="landscape"/>-->
	<preference name="target-device"  value="universal"/>
	<preference name="fullscreen"   value="true"/>
	<preference name="android-installLocation" value="auto"/>
	<preference name="permissions" value="INTERNET"/>
	
	<!--Plugins-->
	<!--core plugins-->
	<plugin name="cordova-plugin-device" spec="~1.1.4"/>
	<pligin name="cordova-plugin-vibration" spec="~2.1.3"/>
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
	
	<!-- >plugin name="cordova-plugin-geolocation" source="npm"/-->
	 <!--third party plugins-->
	  <!--<para acceder a una pagina en internet-->
    <allow-intent href="https://*/*"/>
    <acces origin="https://*/*"/>
    <allow-intent href="http://*/*"/>
    <acces origin="http://*/*"/>
    <plugin name="cordova-plugin-whitelist" source="npm"/>
	 
	 <!--colocar icono app-->
	 
	 <icon src="res/android/mdpi.png"/>
	 
	 </widget>
	 